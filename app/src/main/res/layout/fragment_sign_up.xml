<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/maincolor"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".authentication.SignUpFragment">

    <ImageView
        android:id="@+id/ivImageLogo"
        android:layout_width="69dp"
        android:layout_height="69dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvJan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/titillium_web_bold"
        android:text="@string/jan"
        android:textColor="@color/option2color"
        android:textSize="27sp"
        android:layout_marginTop="-55dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivImageLogo"
        app:layout_constraintStart_toEndOf="@id/ivImageLogo"
        app:layout_constraintTop_toTopOf="@id/ivImageLogo" />

    <TextView
        android:id="@+id/tvKen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/titillium_web_bold"
        android:text="@string/ken"
        android:textColor="@color/option2color"
        android:textSize="27sp"
        app:layout_constraintStart_toStartOf="@+id/tvJan"
        app:layout_constraintTop_toTopOf="@+id/tvJan" />

    <TextView
        android:id="@+id/tvPon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/titillium_web_bold"
        android:text="@string/pon"
        android:textColor="@color/option2color"
        android:textSize="27sp"
        app:layout_constraintStart_toStartOf="@+id/tvKen"
        app:layout_constraintTop_toTopOf="@+id/tvKen" />

    <TextView
        android:id="@+id/tvSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/titillium_web_bold"
        android:shadowColor="@color/shadow"
        android:shadowDy="10"
        android:shadowRadius="1"
        android:text="Sign Up"
        android:textColor="@color/option2color"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:paddingStart="16dp"
        android:background="@drawable/edit_text_rounded"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/secondarycolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSignUp" />

    <EditText
        android:id="@+id/edtUserName"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:paddingStart="16dp"
        android:background="@drawable/edit_text_rounded"
        android:hint="@string/hint_username"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/secondarycolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtEmail" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:paddingStart="16dp"
        android:background="@drawable/edit_text_rounded"
        android:hint="@string/hint_password"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/secondarycolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtUserName" />

    <EditText
        android:id="@+id/edtRePassword"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:paddingStart="16dp"
        android:background="@drawable/edit_text_rounded"
        android:hint="@string/hint_re_password"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/secondarycolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtPassword" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignUp"
        android:layout_width="131dp"
        android:layout_height="43dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/button"
        android:elevation="4dp"
        android:fontFamily="@font/titillium_web_regular"
        android:paddingBottom="5dp"
        android:text="@string/sign_up"
        android:textAllCaps="false"
        android:textColor="@color/maincolor"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/edtRePassword"
        app:layout_constraintStart_toStartOf="@id/edtRePassword"
        app:layout_constraintTop_toBottomOf="@+id/edtRePassword" />

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/titillium_web_regular"
        android:shadowColor="@color/shadow"
        android:shadowDy="8"
        android:shadowRadius="1"
        android:text="@string/login"
        android:textColor="@color/optioncolor"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/btnSignUp"
        app:layout_constraintStart_toStartOf="@id/btnSignUp"
        app:layout_constraintTop_toBottomOf="@id/btnSignUp" />

</androidx.constraintlayout.widget.ConstraintLayout>