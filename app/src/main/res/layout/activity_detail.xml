<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.DetailActivity"
    android:background="@color/maincolor">

    <View
    android:layout_width="match_parent"
    android:layout_height="70dp"
        android:id="@+id/viewTopBar"
    android:background="@color/secondarycolor"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_arrow_back"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        app:tint="@color/option2color"
        android:id="@+id/ivBack"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hasil_permainan"
        android:textColor="@color/option2color"
        android:fontFamily="@font/titillium_web_regular"
        android:textSize="24sp"
        android:layout_toRightOf="@id/ivBack"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/tvDates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/titillium_web_bold"
        android:textColor="@color/secondarycolor"
        android:textSize="14sp"
       android:layout_below="@+id/viewTopBar"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        tools:text="Senin 29, Agu 2022" />

    <TextView
        android:id="@+id/tvHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/titillium_web_regular"
        android:textColor="@color/secondarycolor"
        android:textSize="13sp"
        android:layout_below="@id/viewTopBar"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        tools:text="11:09:44" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/titillium_web_bold"
        android:text="@string/player_win"
        android:layout_below="@id/tvDates"
        android:layout_marginTop="20dp"
        android:textColor="@color/secondarycolor" />

    <TextView
        android:id="@+id/tvStatusResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/titillium_web_bold"
        android:text="@string/username_menang"
        android:layout_below="@id/tvResult"
        android:layout_marginTop="5dp"
        android:textColor="@color/secondarycolor" />

    <TextView
        android:id="@+id/tvGameMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/titillium_web_bold"
        android:text="@string/mode_player_vs_player"
        android:layout_below="@id/tvStatusResult"
        android:layout_marginTop="5dp"
        android:textColor="@color/secondarycolor" />



</RelativeLayout>